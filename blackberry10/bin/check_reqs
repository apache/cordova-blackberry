# checks whether the system is setup to build a blackberry project
#
# USAGE
#   ./check_reqs
#
#!/bin/sh
BIN_DIR=$(dirname "$0")
if [ "`uname`" == "Linux" ] ; then
    $BIN_DIR/../third_party/node/node-v0.10.5-linux-x86/bin/node $BIN_DIR"/check_reqs.js" "$@"
elif [ "`uname`" == "Darwin" ]; then
    $BIN_DIR/../third_party/node/node-v0.10.5-darwin-x86/bin/node $BIN_DIR"/check_reqs.js" "$@"
else
    echo "No node binary found for your OS"
fi
