ANT=$(which ant)

if [ "$1" == "-h" -o "$1" == "-help" ]
then
  echo 'usage: addWebworks'
  echo 'Automatically adds the webworks.js reference to all of your html files in the www/ folder'
  echo 'Only relevant to qnx'
  exit 0
fi

if [ ! -e "www/js/webworks.js" ]
then
    echo 'www/js/webworks.js file not found - need to build project'
    $ANT qnx build
fi

find www -name \*.html\* | while read fullpath
do
    # i hate regex
    jspath=$( dirname "$fullpath" ) ; jspath=${jspath#./www} ; jspath=${jspath//\/[a-zA-Z0-9]/../} ; jspath=${jspath//[a-zA-Z0-9]/}
    sed -i "" '/<head>/ a\
    <script type="text/javascript" src="'$jspath'js/webworks.js"></script>' $fullpath    
done

#find . -name \*.html\* -print0 | xargs -0 -I file sed -i "" '/<head>/ a\
#<script type="text/javascript" src="/www/js/webworks.js">' file

echo 'added webworks reference to these files: '
find www -name \*.html\* | xargs -0 echo
